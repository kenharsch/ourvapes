<div class = "container">
	<div class = "row nav-bar">
		<div class = "col-xs-12">
			<a class="logo" href="/">VapeRater</a>

			<span class="user-search-nav">
				<span>
				<span class="user-item">
					<% if user_signed_in? %>

						<%= image_tag gravatar_url(current_user, 48)%>
					<% end %>
						
					</span>
					<%= render 'shared/login_items' %>
					<%= render 'shared/registration_items' %>
					<%= link_to @my_config_label, {action: "index", controller: "/configuration"}, class: "user-item" %>

					
					<br />
				</span>


				<span class = "search-bar">
					<%= form_tag "/product_list/list", method: "get", class: "" do %>
					<%= text_field_tag :query, @query, class: "form-control search-bar search-field", placeholder: "Search" %>
					<%= submit_tag "GO", class: "btn btn-primary search-bar", role: "button" %>
					<% end %>
				</span>
			</span>

		</div>
	</div>
	<br />
	
	<div class = "row link-bar">
		<div class = "nav-button-holder">
			<a class="nav-button" href="/">Home</a>
		</div>

		<div class = "nav-button-holder">
			<a class="nav-button" href="/">Switching</a>
		</div>

		<div class = "nav-button-holder">
			<a class="nav-button" href="/science">Science</a>
		</div>

		<div class = "nav-button-holder">
			<%= link_to "Products", {action: "list", controller: "/product_list"}, class: "nav-button" %>
		</div>

		<div class = "nav-button-holder">
			<a class="nav-button" href="/">News</a>
		</div>

		<div class = "nav-button-holder">
			<a class="nav-button" href="/about">About</a>
		</div>


	</div>

</div>