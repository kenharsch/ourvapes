<div class = "imageBox">
	<%= image_tag(prod.picture_path, class: 'img-responsive') %>
</div>
<div class = "details">
	<p>
		<%= render 'shared/modal_details', prod: prod %>
		by <%= prod.manufacturer %>
		<span class = "prod_price">
			<strong>$<%= "%.2f" % prod.price unless prod.price.blank? %></strong><br/>
		</span>
		<%= render 'shared/star_rating' %>
	</p>

	<p><strong>Product Features</strong> <br>
		<%= truncate(prod.description, length: 200, separator: ' ') %>
	</p>
	<span class = "prod_type">
		<%= prod.type %>:
	</span>
	<%= link_to("See all " + prod.class.count.to_s + " items", {controller: "product_list", type: prod.class}, class: "prod_all_items") %>
	</div>