<div class = "imageBox">
	<%= link_to(image_tag(prod.picture_path, class: 'img-responsive'), "", 'data-toggle' => "modal", "data-target" => "#modalID#{prod.id}") %>
</div>
<div class="modal fade" id="modalID<%= prod.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel"><%= prod.name %></h4>
			</div>
			<div class="modal-body">
				<%= image_tag(prod.picture_path, class: 'product_image') %><br/><br/>
				<strong>Name:</strong> <%= prod.name %><br/>
				<strong>Manufacturer:</strong> <%= prod.manufacturer %><br/>
				<strong>Price:</strong> $<%= "%.2f" % prod.price unless prod.price.blank? %><br/>
				<strong>Type:</strong> <%= prod.type %><br/>
				<strong>Rating:</strong> <%= render 'shared/star_rating' %><br/><br/>
				<strong>Description:</strong> <%= prod.description %><br/><br/>
				<% if request.env['PATH_INFO'] != "/configuration"  && prod.type != "Juice"%>
					<%= render 'shared/add_product_button', prod: prod%>
				<% end %>
			</div>
		</div>
	</div>
</div>